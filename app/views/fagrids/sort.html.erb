<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading text-center">検索結果</h1>
  </div>
  <%= link_to '検索画面に戻る', fagrids_search_path%>
</section>
<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
    <% if @result.length != 0 %>
      <% @result.each do |fagrid| %>
        <div class='col-md-4'>
          <div class="card mb-4 shadow-sm">
          <%= link_to fagrid_path(fagrid.id) do %>
            <%= image_tag fagrid.image, class: "card-img-top" %>
          <% end %>
            <div class="card-body">
              <h4 class="card-title"><%= fagrid.quest.name %></h4>
              <small class="card-text text-muted">自石：</small><h6 class="card-text"><%= fagrid.main_summon.name %>(<%= fagrid.attr.name %>)</h6>
              <small class="card-text text-muted">ジョブ：</small><h6 class="card-text"><%= fagrid.job.name %></h6>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%# <button type="button" class="btn btn-sm btn-outline-secondary">見る</button> %>
                  <%# <button type="button" class="btn btn-sm btn-outline-secondary">編集</button> %>
                </div>
                <small class="text-muted">投稿日時：<%= l fagrid.created_at, format: :short %></small>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <h1>該当無し</h1>
      <%= link_to '投稿する', new_fagrid_path, class: "btn btn-primary my-2"%>
    <% end %>
    </div>
  </div>
</div>